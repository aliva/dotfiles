#!/bin/bash

die (){
    echo "ERROR on ${filename}"
    exit
}

for filename in $@
do
    case $filename in
        *.tar.bz2)
            echo "+++" $filename
            output_dir=`echo $filename | sed -s 's/\.tar\.bz2$//g'`
            mkdir -p "${output_dir}"
            tar xf "${filename}" -C "${output_dir}" --verbose || die
            ;;
        *.zip)
            echo "+++" $filename
            output_dir=`echo $filename | sed -s 's/\.zip$//g'`
            unzip "${filename}" -d "${output_dir}" || die
            ;;
        *.rar)
            echo "+++" $filename
            unrar x "${filename}" || die
            ;;
        *)
            ;;
    esac
done
