# ignore case for autocompletion
set completion-ignore-case on
# list all possible completion with single tab press
set show-all-if-ambiguous on
# shift-tab through available completion options
"\e[Z": menu-complete
# revert menu-complete
#"\e[Z": "\e-1\C-i"
# use - instead of _
set completion-map-case on
# disable beep sound
set bell-style visible

# vi mode
# list bindings : bind -P
set editing-mode vi

$if mode=vi
    # mapping in normal mode
    set keymap vi-command

    "H": beginning-of-line
    "L": beginning-of-line

    # mapping in insert mode
    set keymap vi-insert

    #"jj": vi-movement-mode
$endif
