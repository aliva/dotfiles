[
  /* toggle line numbers with f1 */
  {
    "key": "f1",
    "command": "settings.cycle.editor.lineNumbers"
  },
  /* quick open */
  {
    "command": "workbench.action.quickOpen",
    "key": "ctrl+shift-r"
  },
  /* show commands */
  {
    "key": "ctrl+shift+a",
    "command": "workbench.action.showCommands"
  },
  {
    "key": "ctrl+shift+p",
    "command": "gitProjectManager.openProject"
  },
  /* disable shortcuts in terminal */
  {
    "key": "ctrl+p",
    "when": "terminalFocus",
    "command": ""
  },
  {
    "key": "ctrl+f",
    "when": "terminalFocus",
    "command": ""
  },
  /* back and forward */
  {
    "key": "alt+left",
    "command": "workbench.action.navigateBack"
  },
  {
    "key": "alt+right",
    "command": "workbench.action.navigateForward"
  }
]
