{
/* do not collect data */
"telemetry.enableCrashReporter": false,
"telemetry.enableTelemetry": false,
/* show a ruler for col 80 for python */
"editor.autoIndent": true,
"editor.fontFamily": "'Source Code Pro', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
"editor.fontSize": 13,
"editor.lineNumbers": "off",
"editor.minimap.enabled": true,
"editor.multiCursorModifier": "ctrlCmd",
"editor.renderIndentGuides": true,
"editor.rulers": [80, 120],
/* hide these files in file manager */
"files.autoSave": "onFocusChange",
"files.exclude": {
  "**/__pycache__": true,
  "**/.coverage": true,
  "**/.DS_Store": true,
  "**/.git": true,
  "**/.hg": true,
  "**/.idea": true,
  "**/.svn": true,
  "**/.vagrant": true,
  "**/.vscode": true,
  "**/*.egg-info": true,
  "**/*.pyc": true,
  "**/node_modules": true
},
"files.insertFinalNewline": true,
"files.trimTrailingWhitespace": true,
/* windows */
"window.menuBarVisibility": "toggle",
"window.zoomLevel": 0,
/* workbench */
"workbench.iconTheme": "simple-icons",
"workbench.startupEditor": "none",
"workbench.colorTheme": "Default Light+",
/* git */
"git.confirmSync": false,
"git.enableSmartCommit": true,
/* python plugin */
"python.formatting.provider": "autopep8",
"python.linting.flake8Enabled": true,
"python.linting.flake8Path": "/usr/bin/flake8",
"python.linting.pep8Enabled": false,
"python.linting.pylintEnabled": false,
"python.venvPath": "~/.virtualenvs/",
/* cycle plugin */
"settings.cycle": [
  {
    "id": "editor.lineNumbers",
    "values": [
      {"editor.lineNumbers": "on"},
      {"editor.lineNumbers": "off"}
    ]
  }
],
/* git project manager plugin */
"gitProjectManager.baseProjectsFolders": [
  "~/Workspace/"
],
"gitProjectManager.maxDepthRecursion": 4,
"gitProjectManager.searchInsideProjects": false
}
