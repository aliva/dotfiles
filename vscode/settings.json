{
/* do not collect data */
"telemetry.enableCrashReporter": false,
"telemetry.enableTelemetry": false,
/* show a ruler for col 80 for python */
"editor.fontFamily": "'Sauce Code Pro', 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
"editor.fontSize": 13,
"editor.lineNumbers": "off",
"editor.minimap.enabled": true,
"editor.renderIndentGuides": true,
"editor.rulers": [80],
/* hide these files in file manager */
"files.autoSave": "onFocusChange",
"files.exclude": {
  "**/__pycache__": true,
  "**/.DS_Store": true,
  "**/.git": true,
  "**/.hg": true,
  "**/.idea": true,
  "**/.svn": true,
  "**/.vagrant": true,
  "**/.vscode": true,
  "**/*.egg-info": true,
  "**/*.pyc": true,
  "**/node_modules": true
},
"files.insertFinalNewline": true,
"files.trimTrailingWhitespace": true,
/* windows */
"window.menuBarVisibility": "toggle",
"window.zoomLevel": 0,
/* workbench */
"workbench.colorTheme": "Visual Studio Dark",
"workbench.iconTheme": "vscode-great-icons",
"workbench.welcome.enabled": false,
/* python plugin */
"python.linting.flake8Enabled": true,
"python.linting.pep8Enabled": false,
"python.linting.pylintEnabled": false,
"python.venvPath": "~/.virtualenvs/",
/* git project manager plugin */
"gitProjectManager.baseProjectsFolders": [
  "~/Workspace/"
],
"git.confirmSync": false,
"gitProjectManager.maxDepthRecursion": 1
}
